{# 
  Component: Predictive Search
  Description: Search with instant results and images.
  Placement: Header
#}
<div class="predictive-search relative w-full max-w-xl mx-auto" x-data="{ open: false, query: '' }">
    <div class="relative">
        <input 
            type="text" 
            placeholder="{{ trans('common.search_placeholder') }}" 
            class="w-full h-12 pl-12 pr-4 bg-gray-100 border-none rounded-full focus:ring-2 focus:ring-primary transition-shadow"
            @focus="open = true"
            @blur="setTimeout(() => open = false, 200)"
            x-model="query"
        >
        <i class="sicon-search absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 text-xl"></i>
    </div>
    
    {# Results Dropdown #}
    <div 
        class="absolute top-full left-0 right-0 mt-2 bg-white rounded-xl shadow-2xl border border-gray-100 overflow-hidden z-50"
        x-show="open"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 translate-y-2"
        x-transition:enter-end="opacity-100 translate-y-0"
        style="display: none;"
    >
        {# Popular Searches #}
        <div class="p-4 border-b border-gray-100" x-show="!query">
            <p class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-3">{{ trans('common.popular_searches') }}</p>
            <div class="flex flex-wrap gap-2">
                <a href="#" class="px-3 py-1 bg-gray-100 rounded-full text-sm hover:bg-gray-200 transition-colors">Summer Dress</a>
                <a href="#" class="px-3 py-1 bg-gray-100 rounded-full text-sm hover:bg-gray-200 transition-colors">Shoes</a>
                <a href="#" class="px-3 py-1 bg-gray-100 rounded-full text-sm hover:bg-gray-200 transition-colors">Accessories</a>
            </div>
        </div>
        
        {# Mock Results (In real implementation, this would be populated via AJAX) #}
        <div class="p-2" x-show="query">
            <p class="px-2 py-2 text-xs font-bold text-gray-400 uppercase tracking-wider">{{ trans('common.products') }}</p>
            <a href="#" class="flex items-center gap-3 p-2 hover:bg-gray-50 rounded-lg transition-colors group">
                <div class="w-12 h-12 bg-gray-200 rounded overflow-hidden">
                    <img src="https://via.placeholder.com/50" class="w-full h-full object-cover">
                </div>
                <div>
                    <h4 class="font-bold text-sm text-gray-900 group-hover:text-primary">Sample Product Name</h4>
                    <p class="text-xs text-gray-500">$99.00</p>
                </div>
            </a>
            <a href="#" class="flex items-center gap-3 p-2 hover:bg-gray-50 rounded-lg transition-colors group">
                <div class="w-12 h-12 bg-gray-200 rounded overflow-hidden">
                    <img src="https://via.placeholder.com/50" class="w-full h-full object-cover">
                </div>
                <div>
                    <h4 class="font-bold text-sm text-gray-900 group-hover:text-primary">Another Product</h4>
                    <p class="text-xs text-gray-500">$149.00</p>
                </div>
            </a>
            
            <a href="#" class="block text-center py-3 text-sm font-bold text-primary border-t border-gray-100 mt-2">
                {{ trans('common.view_all_results') }}
            </a>
        </div>
    </div>
</div>
