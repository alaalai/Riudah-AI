<footer class="bg-gray-900 text-gray-300 pt-16 pb-8 border-t border-gray-800">
    <div class="container">
        {# Top Section: Newsletter & Social #}
        <div class="flex flex-col lg:flex-row justify-between items-center gap-8 mb-12 pb-12 border-b border-gray-800">
            <div class="lg:w-1/2">
                <h3 class="text-2xl font-bold text-white mb-2">{{ trans('blocks.footer.newsletter_title', 'Join our Newsletter') }}</h3>
                <p class="text-gray-400">{{ trans('blocks.footer.newsletter_subtitle', 'Get 10% off your first order and stay updated.') }}</p>
            </div>
            <div class="lg:w-1/2 w-full">
                <form class="flex gap-2" onsubmit="return false;">
                    <input type="email" placeholder="{{ trans('common.email_placeholder') }}" class="flex-1 bg-gray-800 border-none rounded-lg px-4 py-3 text-white focus:ring-2 focus:ring-primary transition-shadow">
                    <button type="submit" class="btn btn-primary px-8 font-bold">{{ trans('common.subscribe') }}</button>
                </form>
            </div>
        </div>

        {# Main Footer Content #}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 mb-12">
            {# Column 1: About #}
            <div>
                <a href="{{ store.url }}" class="block mb-6">
                    {% if store.logo %}
                        <img src="{{ store.logo }}" alt="{{ store.name }}" class="h-10 w-auto filter brightness-0 invert">
                    {% else %}
                        <span class="text-2xl font-bold text-white">{{ store.name }}</span>
                    {% endif %}
                </a>
                <p class="text-sm leading-relaxed mb-6 text-gray-400">
                    {{ store.description|striptags|slice(0, 150) }}...
                </p>
                <salla-social class="flex gap-4 text-xl"></salla-social>
            </div>

            {# Column 2: Links #}
            <div>
                <h4 class="text-white font-bold mb-6">{{ trans('blocks.footer.pages_links') }}</h4>
                <salla-menu source="footer" class="space-y-3 text-sm hover:text-white transition-colors"></salla-menu>
            </div>

            {# Column 3: Contact #}
            <div>
                <h4 class="text-white font-bold mb-6">{{ trans('common.contact_us') }}</h4>
                <ul class="space-y-4 text-sm">
                    {% if store.contacts.mobile %}
                        <li class="flex items-start gap-3">
                            <i class="sicon-phone text-primary mt-1"></i>
                            <span>{{ store.contacts.mobile }}</span>
                        </li>
                    {% endif %}
                    {% if store.contacts.email %}
                        <li class="flex items-start gap-3">
                            <i class="sicon-mail text-primary mt-1"></i>
                            <span>{{ store.contacts.email }}</span>
                        </li>
                    {% endif %}
                    {% if store.contacts.whatsapp %}
                        <li class="flex items-start gap-3">
                            <i class="sicon-whatsapp text-primary mt-1"></i>
                            <span>{{ store.contacts.whatsapp }}</span>
                        </li>
                    {% endif %}
                </ul>
            </div>

            {# Column 4: Apps & Trust #}
            <div>
                <h4 class="text-white font-bold mb-6">{{ trans('common.download_app') }}</h4>
                <salla-apps-icons class="mb-8"></salla-apps-icons>
                
                <h4 class="text-white font-bold mb-4">{{ trans('common.secure_payment') }}</h4>
                <salla-trust-badges class="opacity-80"></salla-trust-badges>
            </div>
        </div>

        {# Bottom Footer #}
        <div class="pt-8 border-t border-gray-800 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-gray-500">
            <p>{% hook copyright %}</p>
            <div class="flex items-center gap-2">
                {% if store.settings.tax.number %}
                    <span>{{ trans('common.elements.tax_number') }}: {{ store.settings.tax.number }}</span>
                    {% if store.settings.tax.certificate %}
                        <a href="{{ store.settings.tax.certificate }}" target="_blank" class="text-gray-400 hover:text-white">
                            <i class="sicon-file-text"></i>
                        </a>
                    {% endif %}
                {% endif %}
            </div>
            <salla-payments></salla-payments>
        </div>
    </div>
</footer>

