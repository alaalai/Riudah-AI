{# 
  Component: Frequently Bought Together
  Description: Bundle suggestion on product page.
  Placement: Product Page
#}
<section class="frequently-bought py-8 border-t border-gray-100">
    <h3 class="font-bold text-lg text-gray-900 mb-6">{{ trans('pages.products.frequently_bought_together') }}</h3>
    
    <div class="flex flex-col md:flex-row items-center gap-4">
        {# Main Product #}
        <div class="w-24 h-24 rounded-lg border border-gray-200 p-2">
            <img src="{{ product.image.url }}" class="w-full h-full object-contain">
        </div>
        
        <div class="text-gray-400 font-bold text-xl">+</div>
        
        {# Suggested Product #}
        <div class="w-24 h-24 rounded-lg border border-gray-200 p-2 relative">
            <img src="{{ 'images/accessory-placeholder.jpg' | asset }}" class="w-full h-full object-contain">
            <div class="absolute -top-2 -right-2 bg-red-500 text-white text-xs font-bold px-1.5 py-0.5 rounded">20% OFF</div>
        </div>
        
        {# Total & CTA #}
        <div class="flex-1 md:ml-8 text-center md:text-left">
            <p class="text-gray-500 text-sm mb-1">{{ trans('common.total_price') }}:</p>
            <div class="flex items-center justify-center md:justify-start gap-2 mb-3">
                <span class="text-2xl font-bold text-gray-900">$149.00</span>
                <span class="text-gray-400 line-through text-sm">$179.00</span>
            </div>
            <button class="bg-primary text-white px-6 py-2 rounded-lg font-bold text-sm hover:bg-primary-dark transition-colors w-full md:w-auto">
                {{ trans('common.add_both_to_cart') }}
            </button>
        </div>
    </div>
</section>
