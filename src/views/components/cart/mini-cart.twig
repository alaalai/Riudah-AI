{# 
  Component: Mini Cart
  Description: Slide-out cart drawer instead of page redirect.
  Placement: Global (Hidden by default)
#}
<div 
    id="mini-cart-drawer"
    class="fixed inset-0 z-50 invisible opacity-0 transition-all duration-300"
    x-data="{ open: false }"
    @cart-opened.window="open = true"
    :class="{ 'visible opacity-100': open }"
>
    {# Backdrop #}
    <div 
        class="absolute inset-0 bg-black/50 backdrop-blur-sm transition-opacity duration-300"
        @click="open = false"
    ></div>
    
    {# Drawer #}
    <div 
        class="absolute top-0 right-0 bottom-0 w-full max-w-md bg-white shadow-2xl transform translate-x-full transition-transform duration-300 flex flex-col"
        :class="{ 'translate-x-0': open }"
    >
        {# Header #}
        <div class="p-4 border-b border-gray-100 flex items-center justify-between">
            <h3 class="font-bold text-lg text-gray-900">{{ trans('pages.cart.title') }} ({{ cart.items_count }})</h3>
            <button @click="open = false" class="text-gray-400 hover:text-gray-900">
                <i class="sicon-cancel text-xl"></i>
            </button>
        </div>
        
        {# Free Shipping Bar #}
        {% include 'views/components/cart/free-shipping-bar.twig' %}
        
        {# Items #}
        <div class="flex-1 overflow-y-auto p-4 space-y-4">
            {% if cart.items|length > 0 %}
                {% for item in cart.items %}
                    <div class="flex gap-4">
                        <div class="w-20 h-20 rounded-lg overflow-hidden bg-gray-100 shrink-0">
                            <img src="{{ item.product_image }}" alt="{{ item.product_name }}" class="w-full h-full object-cover">
                        </div>
                        <div class="flex-1">
                            <h4 class="font-bold text-sm text-gray-900 mb-1">{{ item.product_name }}</h4>
                            <p class="text-xs text-gray-500 mb-2">{{ item.options }}</p>
                            <div class="flex items-center justify-between">
                                <span class="font-bold text-primary">{{ item.price|money }}</span>
                                <div class="flex items-center border border-gray-200 rounded">
                                    <button class="px-2 py-1 text-gray-500 hover:bg-gray-50">-</button>
                                    <span class="px-2 text-sm">{{ item.quantity }}</span>
                                    <button class="px-2 py-1 text-gray-500 hover:bg-gray-50">+</button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="text-center py-10">
                    <i class="sicon-shopping-bag text-4xl text-gray-300 mb-4"></i>
                    <p class="text-gray-500">{{ trans('pages.cart.empty_cart') }}</p>
                    <button @click="open = false" class="mt-4 text-primary font-bold">{{ trans('common.continue_shopping') }}</button>
                </div>
            {% endif %}
            
            {# Upsell #}
            {% include 'views/components/cart/cart-upsell.twig' %}
        </div>
        
        {# Footer #}
        <div class="p-4 border-t border-gray-100 bg-gray-50">
            <div class="flex justify-between items-center mb-4">
                <span class="font-bold text-gray-900">{{ trans('pages.cart.subtotal') }}</span>
                <span class="font-bold text-xl text-primary">{{ cart.sub_total|money }}</span>
            </div>
            <a href="{{ link('checkout') }}" class="block w-full bg-primary text-white text-center py-4 rounded-xl font-bold hover:bg-primary-dark transition-colors shadow-lg btn-animated btn-pulse">
                {{ trans('pages.cart.checkout_proceed') }}
            </a>
            <p class="text-center text-xs text-gray-500 mt-2">
                <i class="sicon-lock"></i> {{ trans('common.secure_checkout') }}
            </p>
        </div>
    </div>
</div>
