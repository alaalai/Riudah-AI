{# 
  Component: Cart Upsell
  Description: "Add X to unlock Y" or simple product suggestions in cart.
  Placement: Cart Drawer / Cart Page
#}
<div class="cart-upsell mt-6 pt-6 border-t border-gray-100">
    <h4 class="font-bold text-sm text-gray-900 mb-3">{{ trans('pages.cart.you_might_also_like') }}</h4>
    
    <div class="space-y-3">
        {% for product in products|slice(0, 2) %}
            <div class="flex items-center gap-3 bg-white p-2 rounded-lg border border-gray-100">
                <div class="w-12 h-12 rounded bg-gray-100 overflow-hidden shrink-0">
                    <img src="{{ product.image.url }}" class="w-full h-full object-cover">
                </div>
                <div class="flex-1 min-w-0">
                    <h5 class="text-xs font-bold text-gray-900 truncate">{{ product.name }}</h5>
                    <p class="text-xs text-primary font-bold">{{ product.price|money }}</p>
                </div>
                <button class="bg-gray-900 text-white text-xs font-bold px-3 py-1.5 rounded hover:bg-gray-800 transition-colors">
                    {{ trans('common.add') }}
                </button>
            </div>
        {% endfor %}
    </div>
</div>
