{# 
  Component: Trending Now
  Description: Scrolling ticker of trending products.
#}
<section class="py-4 bg-black text-white overflow-hidden">
    <div class="flex gap-8 animate-marquee whitespace-nowrap">
        {% for i in 0..1 %}
            {% for product in products|slice(0, 5) %}
                <div class="flex items-center gap-4 mx-4">
                    <span class="text-yellow-400 font-bold uppercase tracking-wider text-xs">ðŸ”¥ {{ trans('common.trending') }}</span>
                    <a href="{{ product.url }}" class="flex items-center gap-3 hover:text-gray-300 transition">
                        <img src="{{ product.image.url }}" class="w-8 h-8 rounded object-cover border border-white/20">
                        <span class="font-bold text-sm">{{ product.name }}</span>
                        <span class="text-xs bg-white/20 px-2 py-0.5 rounded">{{ product.sale_price|money }}</span>
                    </a>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</section>

<style>
@keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
}
.animate-marquee {
    animation: marquee 30s linear infinite;
}
.animate-marquee:hover {
    animation-play-state: paused;
}
</style>
