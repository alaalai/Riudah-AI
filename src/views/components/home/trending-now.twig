{# 
  Component: Trending Now
  Description: Grid of top selling products to guide indecisive users.
  Placement: Homepage
#}
<section class="trending-now py-16">
    <div class="container">
        <div class="text-center mb-10">
            <span class="text-primary font-bold text-sm uppercase tracking-widest">{{ trans('blocks.trending.subtitle') }}</span>
            <h2 class="text-3xl font-bold text-gray-900 mt-2">{{ trans('blocks.trending.title') }}</h2>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            {% for product in products|sort((a, b) => b.sales_count - a.sales_count)|slice(0, 4) %}
                <div class="product-card group relative">
                    {# Rank Badge #}
                    <div class="absolute top-0 left-0 bg-black text-white w-8 h-8 flex items-center justify-center font-bold text-sm z-10">
                        #{{ loop.index }}
                    </div>
                    
                    <div class="aspect-[3/4] overflow-hidden rounded-lg mb-4 bg-gray-100">
                        <img src="{{ product.image.url }}" alt="{{ product.name }}" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                        
                        {# Quick Actions #}
                        <div class="absolute bottom-4 left-4 right-4 flex gap-2 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                            <button class="flex-1 bg-white text-black py-2 rounded shadow-lg font-bold text-sm hover:bg-black hover:text-white transition-colors">
                                {{ trans('pages.cart.add_to_cart') }}
                            </button>
                            <button class="w-10 bg-white text-black rounded shadow-lg flex items-center justify-center hover:text-red-500 transition-colors">
                                <i class="sicon-heart"></i>
                            </button>
                        </div>
                    </div>
                    
                    <h3 class="font-bold text-gray-900 mb-1 group-hover:text-primary transition-colors">{{ product.name }}</h3>
                    <p class="text-gray-500 text-sm">{{ product.price|money }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
