{#
| Variable                       | Type     | Description                                                                  |
|--------------------------------|----------|------------------------------------------------------------------------------|
| component                      | object   | Contains merchant settings for fields from twilight.json `component` section |
| component.slides[].image       | string   | Image url                                                                    |
| component.slides[].title       | ?string  |                                                                              |
| component.slides[].description | ?string  |                                                                              |
| component.slides               | object[] | list of slides                                                               |
| position                       | int      | Sorting number start from zero                                               |
#}
<section class="s-block s-block--hero-slider s-block--full-bg wide-placeholder overflow-hidden"> 
    <salla-slider 
      id="main-slider-{{ position }}"
      auto-play
      slider-config='{
        "lazy": "false",
        "effect": "fade",
        "speed": 1000
      }'
      type="fullwidth"
      class="h-[500px] md:h-[600px] lg:h-[700px]">
        <div slot="items">
            {% for slide in component.slides %}
                <div class="swiper-slide w-full h-full relative bg-gray-900">
                    {# Background Image with Overlay #}
                    <div class="absolute inset-0 bg-cover bg-center transition-transform duration-[10s] hover:scale-105" 
                         style="background-image: url({{ slide.image }});">
                    </div>
                    <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/40 to-transparent"></div>
                    
                    {# Content #}
                    <div class="container h-full relative z-10 flex items-center">
                        <div class="w-full md:w-2/3 lg:w-1/2 text-white px-4 md:px-0 rtl:pr-10 ltr:pl-10">
                            <span data-swiper-parallax="-300" class="block text-primary font-bold tracking-widest uppercase mb-4 opacity-0 animate-fade-in-up" style="animation-delay: 0.5s">
                                {{ slide.subtitle|default(trans('common.new_collection')) }}
                            </span>
                            
                            <h2 data-swiper-parallax="-400" class="text-4xl md:text-6xl lg:text-7xl font-bold leading-tight mb-6 opacity-0 animate-fade-in-up" style="animation-delay: 0.7s">
                                {{ slide.title }}
                            </h2>
                            
                            <p data-swiper-parallax="-200" class="text-lg md:text-xl text-gray-200 mb-8 max-w-lg leading-relaxed opacity-0 animate-fade-in-up" style="animation-delay: 0.9s">
                                {{ slide.description }}
                            </p>
                            
                            <div data-swiper-parallax="-100" class="flex gap-4 opacity-0 animate-fade-in-up" style="animation-delay: 1.1s">
                                <a href="{{ slide.url|default('#') }}" class="btn btn-primary btn-lg min-w-[160px] shadow-lg shadow-primary/30 hover:shadow-primary/50 transition-all transform hover:-translate-y-1">
                                    {{ trans('common.shop_now') }}
                                </a>
                                <a href="{{ slide.url_2|default('#') }}" class="btn btn-outline-white btn-lg min-w-[160px] hover:bg-white hover:text-black transition-all">
                                    {{ trans('common.explore') }}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </salla-slider>
</section> 
