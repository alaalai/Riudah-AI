{# 
  Component: Flash Sale
  Description: Dedicated section for time-limited deals.
  Placement: Homepage
#}
<section class="flash-sale py-16 bg-gradient-to-br from-red-600 to-red-900 text-white overflow-hidden relative">
    {# Background Pattern #}
    <div class="absolute inset-0 opacity-10 pattern-dots"></div>
    
    <div class="container relative z-10">
        <div class="flex flex-col md:flex-row justify-between items-end mb-10 gap-6">
            <div class="flex items-center gap-6">
                <div class="p-4 bg-white/10 rounded-2xl backdrop-blur-md shadow-inner animate-pulse">
                    <i class="sicon-lightning text-4xl text-yellow-400"></i>
                </div>
                <div>
                    <h2 class="text-4xl font-bold mb-2">{{ trans('blocks.flash_sale.title') }}</h2>
                    <p class="text-red-100 text-lg opacity-90">{{ trans('blocks.flash_sale.subtitle') }}</p>
                </div>
            </div>
            
            <div class="flex items-center gap-6 bg-black/30 p-6 rounded-2xl backdrop-blur-md border border-white/10 shadow-xl">
                <span class="text-sm font-bold uppercase tracking-widest opacity-80">{{ trans('common.ending_in') }}</span>
                {# Dynamic Countdown - Date should be dynamic in real app #}
                <salla-count-down date="{{ 'now'|date_modify('+2 days')|date('Y-m-d H:i:s') }}" class="text-3xl font-bold font-mono"></salla-count-down>
            </div>
        </div>
        
        <salla-slider type="carousel" class="flash-sale-slider">
            <div slot="items">
                {% for product in products|slice(0, 6) %}
                    <div class="swiper-slide p-2">
                        <div class="bg-white rounded-2xl overflow-hidden shadow-xl group hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
                            <div class="relative aspect-[4/5] overflow-hidden bg-gray-100">
                                <span class="absolute top-3 left-3 bg-red-600 text-white text-sm font-bold px-3 py-1 rounded-full z-10 shadow-md">
                                    -{{ product.discount_percentage }}%
                                </span>
                                
                                <a href="{{ product.url }}">
                                    <img src="{{ product.image.url }}" alt="{{ product.name }}" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700">
                                </a>
                                
                                <div class="absolute bottom-0 left-0 right-0 p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300 z-20">
                                    <salla-add-product-button product-id="{{ product.id }}" class="w-full btn btn-primary">
                                        {{ trans('pages.cart.add_to_cart') }}
                                    </salla-add-product-button>
                                </div>
                            </div>
                            <div class="p-5">
                                <h3 class="font-bold text-gray-900 truncate text-lg mb-2">
                                    <a href="{{ product.url }}" class="hover:text-primary transition-colors">{{ product.name }}</a>
                                </h3>
                                <div class="flex items-center gap-3 mb-3">
                                    <span class="text-red-600 font-bold text-xl">{{ product.sale_price|money }}</span>
                                    <span class="text-gray-400 text-sm line-through decoration-red-500/50">{{ product.regular_price|money }}</span>
                                </div>
                                
                                {# Stock Progress #}
                                <div class="space-y-1">
                                    <div class="flex justify-between text-xs font-bold text-gray-500">
                                        <span>{{ trans('common.sold') }}: 85%</span>
                                        <span class="text-red-500">{{ trans('common.hurry_up') }}</span>
                                    </div>
                                    <div class="h-2 bg-gray-100 rounded-full overflow-hidden">
                                        <div class="h-full bg-gradient-to-r from-red-500 to-red-600 rounded-full w-[85%]"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </salla-slider>
    </div>
</section>

