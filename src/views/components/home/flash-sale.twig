{# 
  Component: Flash Sale
  Description: Dedicated section for time-limited deals.
  Placement: Homepage
#}
<section class="flash-sale py-12 bg-gradient-to-r from-red-600 to-red-800 text-white overflow-hidden relative">
    {# Background Pattern #}
    <div class="absolute inset-0 opacity-10" style="background-image: url('data:image/svg+xml,...');"></div>
    
    <div class="container relative z-10">
        <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-6">
            <div class="flex items-center gap-4">
                <div class="p-3 bg-white/10 rounded-full backdrop-blur-sm animate-pulse">
                    <i class="sicon-lightning text-3xl text-yellow-400"></i>
                </div>
                <div>
                    <h2 class="text-3xl font-bold">{{ trans('blocks.flash_sale.title') }}</h2>
                    <p class="text-red-100">{{ trans('blocks.flash_sale.subtitle') }}</p>
                </div>
            </div>
            
            <div class="flex items-center gap-4 bg-black/20 p-4 rounded-xl backdrop-blur-sm border border-white/10">
                <span class="text-sm font-bold uppercase tracking-wider">{{ trans('common.ending_in') }}</span>
                <div class="flex gap-2 text-center">
                    <div class="bg-white text-red-600 w-10 h-10 rounded flex items-center justify-center font-bold text-lg">02</div>
                    <span class="text-2xl font-light">:</span>
                    <div class="bg-white text-red-600 w-10 h-10 rounded flex items-center justify-center font-bold text-lg">45</div>
                    <span class="text-2xl font-light">:</span>
                    <div class="bg-white text-red-600 w-10 h-10 rounded flex items-center justify-center font-bold text-lg">12</div>
                </div>
            </div>
        </div>
        
        <salla-slider type="carousel" class="flash-sale-slider">
            <div slot="items">
                {% for product in products|slice(0, 6) %}
                    <div class="swiper-slide p-2">
                        <div class="bg-white rounded-xl overflow-hidden shadow-lg group">
                            <div class="relative aspect-[4/5] overflow-hidden">
                                <span class="absolute top-2 left-2 bg-red-600 text-white text-xs font-bold px-2 py-1 rounded z-10">
                                    -{{ product.discount_percentage }}%
                                </span>
                                <img src="{{ product.image.url }}" alt="{{ product.name }}" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                                
                                <div class="absolute bottom-0 left-0 right-0 p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                                    <button class="w-full bg-black text-white py-3 rounded-lg font-bold hover:bg-gray-800 transition-colors flex items-center justify-center gap-2">
                                        <i class="sicon-shopping-bag"></i>
                                        {{ trans('pages.cart.add_to_cart') }}
                                    </button>
                                </div>
                            </div>
                            <div class="p-4">
                                <h3 class="font-bold text-gray-900 truncate mb-1">{{ product.name }}</h3>
                                <div class="flex items-center gap-2">
                                    <span class="text-red-600 font-bold text-lg">{{ product.sale_price|money }}</span>
                                    <span class="text-gray-400 text-sm line-through">{{ product.regular_price|money }}</span>
                                </div>
                                <div class="mt-3 h-1.5 bg-gray-100 rounded-full overflow-hidden">
                                    <div class="h-full bg-red-500 rounded-full" style="width: 75%"></div>
                                </div>
                                <div class="flex justify-between text-xs text-gray-500 mt-1">
                                    <span>{{ trans('common.sold') }}: 75%</span>
                                    <span>{{ trans('common.left') }}: 12</span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </salla-slider>
    </div>
</section>
