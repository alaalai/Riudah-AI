{# 
  Component: UGC Gallery
  Description: User Generated Content / Instagram Feed.
#}
<section class="py-16 overflow-hidden">
    <div class="container mb-10 text-center">
        <i class="sicon-instagram text-4xl mb-2 bg-gradient-to-tr from-yellow-400 via-red-500 to-purple-500 bg-clip-text text-transparent"></i>
        <h2 class="text-2xl font-bold">@{{ store.username }}</h2>
        <p class="text-gray-500">{{ trans('common.follow_us') }}</p>
    </div>

    <div class="flex flex-wrap md:flex-nowrap">
        {% for i in 1..6 %}
            <div class="w-1/2 md:w-1/6 aspect-square relative group overflow-hidden border border-white">
                <img src="{{ 'images/ugc-' ~ i ~ '.jpg' | asset }}" onerror="this.src='https://via.placeholder.com/400?text=Instagram+Post'" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
                
                <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center gap-4 text-white">
                    <span class="flex items-center gap-1"><i class="sicon-heart-fill"></i> 12{{ i }}</span>
                    <span class="flex items-center gap-1"><i class="sicon-chat-conversation-alt"></i> 4{{ i }}</span>
                </div>
            </div>
        {% endfor %}
    </div>
    
    <div class="text-center mt-8">
        <a href="{{ store.social.instagram }}" target="_blank" class="btn btn-outline-primary min-w-[200px]">
            {{ trans('common.follow_on_instagram') }}
        </a>
    </div>
</section>
