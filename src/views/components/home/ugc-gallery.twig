{# 
  Component: UGC Gallery
  Description: Grid of customer photos from Instagram/reviews to show real usage.
  Placement: Homepage / Product Page
#}
<section class="ugc-gallery py-16">
    <div class="container">
        <div class="flex flex-col md:flex-row justify-between items-end mb-10 gap-4">
            <div>
                <h2 class="text-2xl font-bold text-gray-900 mb-2">{{ trans('blocks.ugc.title') }}</h2>
                <p class="text-gray-500">{{ trans('blocks.ugc.subtitle') }}</p>
            </div>
            <a href="{{ social.instagram }}" target="_blank" class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 rounded-full text-sm font-bold text-gray-700 hover:bg-gray-200 transition-colors">
                <i class="sicon-instagram"></i>
                {{ trans('blocks.ugc.follow_us') }}
            </a>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            {% for image in ugc_images|slice(0, 4) %}
                <div class="group relative aspect-square overflow-hidden rounded-xl cursor-pointer">
                    <img src="{{ image.url }}" alt="Customer photo" class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700">
                    
                    <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                        <i class="sicon-instagram text-white text-3xl"></i>
                    </div>
                    
                    {# Product Tag #}
                    {% if image.product %}
                        <div class="absolute bottom-3 left-3 right-3 bg-white/90 backdrop-blur-sm p-2 rounded-lg transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                            <div class="flex items-center gap-2">
                                <img src="{{ image.product.image }}" class="w-8 h-8 rounded object-cover">
                                <div class="flex-1 min-w-0">
                                    <p class="text-xs font-bold text-gray-900 truncate">{{ image.product.name }}</p>
                                    <p class="text-xs text-primary">{{ image.product.price|money }}</p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</section>
