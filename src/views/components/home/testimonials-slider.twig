{# 
  Component: Testimonials Slider
  Description: Carousel of customer reviews to build social proof.
  Placement: Homepage / Product Page
#}
<section class="testimonials-section py-12 bg-gray-50">
    <div class="container">
        <div class="section-header text-center mb-10">
            <h2 class="text-2xl font-bold text-gray-800 mb-2">{{ trans('blocks.testimonials.title') }}</h2>
            <div class="flex justify-center items-center gap-1 text-yellow-400 mb-2">
                <i class="sicon-star-fill"></i>
                <i class="sicon-star-fill"></i>
                <i class="sicon-star-fill"></i>
                <i class="sicon-star-fill"></i>
                <i class="sicon-star-fill"></i>
            </div>
            <p class="text-gray-500">{{ trans('blocks.testimonials.subtitle') }}</p>
        </div>

        <salla-slider 
            type="carousel" 
            loop="true" 
            auto-play="true" 
            centered-slides="true"
            class="testimonials-slider pb-10"
        >
            <div slot="items">
                {% for review in testimonials %}
                    <div class="swiper-slide p-2">
                        <div class="testimonial-card bg-white p-6 rounded-xl shadow-sm border border-gray-100 h-full flex flex-col relative overflow-hidden group hover:shadow-md transition-shadow duration-300">
                            <div class="absolute top-0 right-0 p-4 opacity-10">
                                <i class="sicon-quote-left text-6xl text-primary"></i>
                            </div>
                            
                            <div class="flex items-center gap-1 text-yellow-400 mb-4 text-sm">
                                {% for i in 1..5 %}
                                    <i class="sicon-star-fill {{ i <= review.rating ? '' : 'text-gray-200' }}"></i>
                                {% endfor %}
                            </div>
                            
                            <p class="text-gray-600 mb-6 flex-grow leading-relaxed">"{{ review.content }}"</p>
                            
                            <div class="flex items-center gap-3 mt-auto">
                                <div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center text-gray-500 font-bold text-sm">
                                    {{ review.name|first }}
                                </div>
                                <div>
                                    <h4 class="font-bold text-sm text-gray-800">{{ review.name }}</h4>
                                    <div class="flex items-center gap-1 text-xs text-green-600">
                                        <i class="sicon-check-circle"></i>
                                        <span>{{ trans('common.verified_buyer') }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </salla-slider>
    </div>
</section>
