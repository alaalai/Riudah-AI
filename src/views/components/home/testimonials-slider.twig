{# 
  Component: Testimonials Slider
  Description: Carousel of customer reviews to build social proof.
  Placement: Homepage / Product Page
#}
<section class="testimonials-section py-20 bg-gray-50 overflow-hidden">
    <div class="container">
        <div class="section-header text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{{ trans('blocks.testimonials.title') }}</h2>
            <div class="flex justify-center items-center gap-1 text-yellow-400 mb-4 text-xl">
                <i class="sicon-star-fill"></i>
                <i class="sicon-star-fill"></i>
                <i class="sicon-star-fill"></i>
                <i class="sicon-star-fill"></i>
                <i class="sicon-star-fill"></i>
            </div>
            <p class="text-gray-500 max-w-2xl mx-auto text-lg">{{ trans('blocks.testimonials.subtitle') }}</p>
        </div>

        <salla-slider 
            type="carousel" 
            loop="true" 
            auto-play="true" 
            centered-slides="true"
            class="testimonials-slider pb-12"
        >
            <div slot="items">
                {% for review in testimonials %}
                    <div class="swiper-slide p-4 md:w-1/2 lg:w-1/3">
                        <div class="testimonial-card bg-white p-8 rounded-2xl shadow-sm border border-gray-100 h-full flex flex-col relative overflow-hidden group hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                            <div class="absolute top-6 right-6 opacity-10 transform group-hover:scale-110 transition-transform">
                                <i class="sicon-quote-left text-6xl text-primary"></i>
                            </div>
                            
                            <div class="flex items-center gap-1 text-yellow-400 mb-6">
                                {% for i in 1..5 %}
                                    <i class="sicon-star-fill {{ i <= review.rating ? '' : 'text-gray-200' }}"></i>
                                {% endfor %}
                            </div>
                            
                            <p class="text-gray-600 mb-8 flex-grow leading-relaxed text-lg italic">"{{ review.content }}"</p>
                            
                            <div class="flex items-center gap-4 mt-auto border-t border-gray-50 pt-6">
                                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary to-primary-dark text-white flex items-center justify-center font-bold text-lg shadow-lg">
                                    {{ review.name|first }}
                                </div>
                                <div>
                                    <h4 class="font-bold text-gray-900">{{ review.name }}</h4>
                                    <div class="flex items-center gap-1 text-xs text-green-600 font-bold mt-1">
                                        <i class="sicon-check-circle"></i>
                                        <span>{{ trans('common.verified_buyer') }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </salla-slider>
    </div>
</section>

